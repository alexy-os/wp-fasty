{
  "name": "wp-fasty",
  "version": "1.0.2",
  "scripts": {
    "llms": "bun run src/scripts/docmd/llms.js",
    "docs": "bun run src/scripts/docmd/main.ts",
    "docs:sync": "bun run src/scripts/docmd/sync.ts",
    "docs:full": "bun run docs:sync && bun run docs",
    "tokens": "bun run src/scripts/tokens/generate.ts",
    "tokens:hex": "bun run src/scripts/tokens/generate-hex.ts",
    "build:css": "tailwind -i wp-fasty-storefront/assets/style.css -o wp-fasty-storefront/assets/css/theme.min.css --minify",
    "build:css:dev": "tailwind -i wp-fasty-storefront/assets/style.css -o wp-fasty-storefront/assets/css/theme.css",
    "watch:css": "tailwind -i wp-fasty-storefront/assets/style.css -o wp-fasty-storefront/assets/css/theme.css --watch",
    "build": "npm run tokens:hex && npm run build:css",
    "dev": "npm run tokens:hex && npm run watch:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "bun-types": "latest",
    "doctrine": "^3.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "3"
  },
  "dependencies": {
    "@types/doctrine": "^0.0.9"
  }
}