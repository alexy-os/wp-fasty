{
  "name": "wp-fasty",
  "description": "Root package for the wp-fasty Wordpress theme monorepo",
  "version": "1.0.4",
  "private": true,
  "license": "MIT",
  "author": "AlexY-OS",
  "homepage": "https://github.com/alexy-os/wp-fasty",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexy-os/wp-fasty.git"
  },
  "workspaces": [
    ".workspaces/*"
  ],
  "scripts": {
    "frontend:install": "bun install --cwd .workspaces/frontend",
    "frontend:dev": "bun run --cwd .workspaces/frontend dev",
    "frontend:build": "bun run --cwd .workspaces/frontend build",
    "frontend:css": "bun run --cwd .workspaces/frontend css",
    "frontend:watch": "bun run --cwd .workspaces/frontend watch",
    "frontend:tailwind": "bun run --cwd .workspaces/frontend tailwind"
  }
}