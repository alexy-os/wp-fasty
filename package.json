{
  "name": "wp-fasty",
  "version": "1.0.2",
  "scripts": {
    "llms": "bun run src/scripts/docmd/llms.js",
    "docs": "bun run src/scripts/docmd/main.ts",
    "docs:sync": "bun run src/scripts/docmd/sync.ts",
    "docs:full": "bun run docs:sync && bun run docs",
    "tokens": "bun run src/scripts/tokens/generate.ts",
    "tokens:hex": "bun run src/scripts/tokens/generate-hex.ts",
    "build:css": "tailwindcss -i src/styles/input.css -o wp-fasty-storefront/assets/css/theme.min.css --postcss --minify",
    "build:css:dev": "tailwindcss -i src/styles/input.css -o wp-fasty-storefront/assets/css/theme.css --postcss",
    "watch:css": "tailwindcss -i src/styles/input.css -o wp-fasty-storefront/assets/css/theme.css --postcss --watch",
    "build": "npm run tokens:hex && npm run build:css",
    "dev": "npm run tokens:hex && npm run watch:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "bun-types": "latest",
    "postcss-import": "^16.1.0",
    "doctrine": "^3.0.0"
  },
  "dependencies": {
    "@types/postcss-js": "^4.0.0",
    "postcss": "^8.4.19",
    "postcss-js": "^4.0.0",
    "tailwindcss": "^3.3.1",
    "@types/doctrine": "^0.0.9"
  }
}