{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@scripts/*": [
        "scripts/*"
      ],
      "@uikits/*": [
        "src/uikits/*"
      ],
      "@templates/*": [
        "src/templates/*"
      ],
      "@context/*": [
        "src/context/*"
      ],
      "@views/*": [
        "src/views/*"
      ],
      "@react/tailwind/*": [
        "src/views/tailwind/node/react/*"
      ],
      "@ui8kit/*": [
        "src/uikits/@ui8kit/src/*"
      ],
      "@semantic/*": [
        "src/uikits/@semantic/src/*"
      ],
      "@n4shadcn/*": [
        "src/uikits/n4shadcn/src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src",
    "scripts"
  ]
}